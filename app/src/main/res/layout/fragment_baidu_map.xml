<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.baidu.mapapi.map.MapView
        android:id="@+id/bmapView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:clickable="true" />

    <ImageView
        android:id="@+id/iv_map_type"
        android:layout_width="@dimen/px_62"
        android:layout_height="@dimen/px_62"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/px_30"
        android:layout_marginRight="@dimen/px_23"
        android:elevation="@dimen/px_30"
        android:background="@drawable/selector_may_type"
        android:src="@drawable/ic_map_type"/>

    <ImageView
        android:id="@+id/iv_map_triffic"
        android:layout_width="@dimen/px_70"
        android:layout_height="@dimen/px_70"
        android:layout_below="@id/iv_map_type"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/px_20"
        android:layout_marginRight="@dimen/px_20"
        android:elevation="@dimen/px_30"
        android:src="@drawable/ic_triffic_off"/>

    <ImageView
        android:id="@+id/iv_map_myloc"
        android:layout_width="@dimen/px_70"
        android:layout_height="@dimen/px_70"
        android:layout_below="@id/iv_map_triffic"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/px_20"
        android:layout_marginRight="@dimen/px_20"
        android:elevation="@dimen/px_30"
        android:background="@drawable/selector_my_location_bg"/>

</RelativeLayout>